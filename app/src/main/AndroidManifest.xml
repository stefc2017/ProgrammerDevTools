<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.stefancouture.programmerdevtools">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_devtools"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".MainActivity">
        </activity>

        <activity android:name=".DisplayConverter"
        android:label="DecBinHex Converter">
        </activity>

        <activity android:name=".SqlMainPage"
            android:label="SQL simulator">
        </activity>

        <activity android:name=".AddData"
            android:label="Insert data into table">
        </activity>

        <activity android:name=".RemoveData"
            android:label="Remove data from table">
        </activity>

        <activity android:name=".ViewTable"
            android:label="View table">
        </activity>

        <activity android:name=".ShowTableContents"
            android:label=" Table contents">
        </activity>

        <activity android:name=".SearchData"
            android:label=" Search for data in table">
        </activity>

    </application>

</manifest>