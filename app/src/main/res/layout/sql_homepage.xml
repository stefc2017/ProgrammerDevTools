<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.stefancouture.programmerdevtools.SqlMainPage">

    <TextView android:id="@+id/desc_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sql_description"
        android:layout_centerHorizontal="true"
        android:textStyle="bold" />

    <TextView android:id="@+id/sqlconverterText"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:text="@string/version"/>

    <Button android:id="@+id/createTable"
        android:layout_width="154dp"
        android:layout_height="wrap_content"
        android:theme="@style/primaryButton"
        android:layout_marginTop="48dp"
        android:text="@string/createTable"
        android:layout_below="@+id/desc_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="44dp"
        android:layout_marginStart="44dp"
        android:drawableLeft="@drawable/create"
        android:onClick="createTable"/>

    <Button android:id="@+id/create_help"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/help"
        android:paddingBottom="20dp"
        android:layout_marginRight="100dp"
        android:layout_alignBaseline="@+id/createTable"
        android:layout_alignParentRight="true" />

    <Button android:id="@+id/viewTables"
        android:layout_width="154dp"
        android:layout_height="wrap_content"
        android:theme="@style/infoButton"
        android:layout_marginTop="20dp"
        android:text="@string/viewTables"
        android:layout_below="@+id/createTable"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="44dp"
        android:layout_marginStart="44dp"
        android:drawableLeft="@drawable/view"/>

    <Button android:id="@+id/view_help"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/help"
        android:paddingBottom="20dp"
        android:layout_marginRight="100dp"
        android:layout_alignBaseline="@+id/viewTables"
        android:layout_alignParentRight="true" />

    <Button android:id="@+id/addData"
        android:layout_width="154dp"
        android:layout_height="wrap_content"
        android:theme="@style/addButton"
        android:layout_marginTop="20dp"
        android:text="@string/addData"
        android:layout_below="@+id/viewTables"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="44dp"
        android:layout_marginStart="44dp"
        android:drawableLeft="@drawable/add"/>

    <Button android:id="@+id/insert_help"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/help"
        android:paddingBottom="20dp"
        android:layout_marginRight="100dp"
        android:layout_alignBaseline="@+id/addData"
        android:layout_alignParentRight="true" />

    <Button android:id="@+id/removeData"
        android:layout_width="154dp"
        android:layout_height="45dp"
        android:theme="@style/removeButton"
        android:layout_marginTop="20dp"
        android:text="@string/removeData"
        android:layout_below="@+id/addData"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="44dp"
        android:layout_marginStart="44dp"
        android:drawableLeft="@drawable/delete"/>

    <Button android:id="@+id/remove_help"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/help"
        android:paddingBottom="20dp"
        android:layout_marginRight="100dp"
        android:layout_alignBaseline="@+id/removeData"
        android:layout_alignParentRight="true" />
</RelativeLayout>